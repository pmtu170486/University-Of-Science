@model IEnumerable<ASPMVC.Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>getall</title>
</head>
<body>
    <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">
        @{int dem = 0;}
        @foreach (var item in Model) 
        {
            dem++;
            <input type="hidden" name="item_number_@dem" value="@item.name" />
    <input type="hidden" name="item_name_@dem" value="@item.name" />
            <input type="hidden" name="quantity_@dem" value="@item.quantity" />
            <input type="hidden" name="amount_@dem" value="@item.price" />
        }
        <input type="hidden" name="cmd" value="_cart" />
        <input type="hidden" name="business" value="nva_bus@gmail.com" />
        <input type="hidden" name="return" value="http://www.google.com" />
        <input type="hidden" name="cancel" value="http://www.dantri.com" />
        <input type="hidden" name="upload" value="1" />
        <input type="image" src="http://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif" />
    </form>
</body>
</html>
